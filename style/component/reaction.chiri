.reaction:
	%flex
	%gap-2
	%padding-inline-1
	%align-items-centre

	:first:
		%padding-left-0

	&-button:
		#after: .button, .button--disabled
		%padding-1-0
		%opaque

		&--reacted:
			#after: .reaction-button

		&-icon:
			#after: .button-icon, .button-icon--type-icon
			%weight-normal
			%font-3

			&--reacted:
				#after: .reaction-button-icon
				%weight-bolder

	&-count:
		%font-2
