.button:
	%borderless
	%inline-block
	%padding-2-3
	%background-dark-4
	%cursor-pointer
	%no-select
	%weight-bold
	%border-radius-1
	%font-3
	%box-shadow-1

	::hover, ::focus:
		%background-dark-5
		%translate-up-1
		%box-shadow-2

	::active:
		%background-dark-3
		%translate-y-0
		%box-shadow-inset-1

	&--disabled:
