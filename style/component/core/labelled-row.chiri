.labelled-row:
	%grid
	%gap-3
	%align-items-centre
	grid-template-columns: auto 1fr

	&--in-labelled-table:
		#after: .labelled-row

		%grid
		%columns-subgrid
		%align-items-start
		%span-2

		#flush:
			%flex
			%flex-column
			%gap-0

	&-label:
		%sticky
		%top-0
		%padding-2-0

		#flush:
			%padding-block-1

	&-content:
		%block
		%relative
		%width-100
