.action-row:
	%flex
	%width-100
	%gap-3
	%border-box
	max-width: #{content-width}

	#flush:
		%flex-column
		%gap-1

	&-left, &-middle, &-right:
		%flex
		%flex-grow
		%gap-3
		%align-items-centre
		%max-width-100

	&-left:
		%justify-content-start

		#flush:
			%justify-content-end

	&-middle:
		%justify-content-centre

		#flush:
			%justify-content-end

	&-right:
		%justify-content-end
