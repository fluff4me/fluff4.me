.dialog:
	%borderless
	%margin-0
	%padding-0
	%max-size-none
	%background-none

	&--open:
		%block
		%relative
		%z-index-fg

	&--fullscreen:
		%size-100
		%inset-0

	&--not-modal:
		%fixed
		%inset-auto
		z-index: 999999999

	&-block:
		%margin-auto

		@backdrop:
			%background-dark-3-a80
			%backdrop-blur
