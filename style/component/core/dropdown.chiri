.dropdown:
	%grid
	%stack

	&-button:
		%stack-self

	&-validity-pipe-input:
		%stack-self
		%transparent
		%pointer-events-none

	&-popover:
		%unmargin-top-3
		%unmargin-left-3

		&--is-bottom:
			#after: .dropdown-popover
			%margin-top-3

		&-input:

		&-content:
			%flex
			%flex-column

	&-option:

		&--selected:

		&--filtered-out:
			#after: .button
			%hidden
