.dropdown:
	%grid
	%stack

	&-button:
		%stack-self
		%text-align-left

	&-validity-pipe-input:
		%stack-self
		%transparent
		%pointer-events-none

	&-popover:
		%unmargin-top-3
		%unmargin-left-3
		max-height: calc(100svh - $space-5)
		%border-box

		&--is-bottom:
			#after: .dropdown-popover
			%margin-top-3

		&-input:

		&-content:
			%flex
			%flex-column
			%overflow-y-auto

	&-option:
		display: ${dropdown-option-display: flex}

		&--selected:

		&--filtered-out:
			#after: .button, .dropdown-option
			%hidden
