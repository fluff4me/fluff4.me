		%text-shadow-none

		&-text:
			%filter-shadow

	&-vanity:

	&-pronouns:

	&-description:
		margin-top: calc($markdown-paragraph-padding-top * -1)

		&--in-popover:
			%clamp-5

	&-support-link:
