.masthead:
	%background-dark-a30
	%grid
	%align-content-centre
	%font-4
	%padding-1-0
	grid-area: masthead
	grid-template-columns: subgrid
	grid-template-areas: ". left mid right ."
	$border-colour: $dark-3
	box-shadow:
		#{box-shadow-inset-border-bottom-1},
		#{box-shadow-inset-bottom-1}

	&-skip-nav:
		%no-pointer-events
		%transparent
		grid-area: left
		%z-index-fg
		$transitions:
			#{transition("opacity")},
			$button-transition

		::hover, ::focus:
			%opaque
			%pointer-events

	&-left:
		%flex
		%padding-left-2
		%margin-left-1
		grid-area: left

		&-hamburger:
			#icon name="bars

	&-home:
		#after: .heading-1

		%font-inherit
		%size-fit
		%flex
		%gap-2
		%padding-2-3
		%background-none
		%box-shadow-none

		::hover, ::focus:
			%box-shadow-none

		@before, @after:
			content: none

		&-logo:

			&-wordmark:
				%no-pointer-events
				%height-em

	&-search:
		grid-area: mid

	&-user:
		%flex
		%align-content-centre
		%padding-right-2
		%margin-right-1
		%justify-content-end
		grid-area: right

		&-notifications:
			#icon name="bell

		&-profile:
			#icon name="circle-user
