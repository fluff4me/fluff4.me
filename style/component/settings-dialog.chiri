.settings-dialog:

	&-hint:
		%unmargin-top-3
		%margin-bottom-4
		%font-1
		%colour-4

		#flush:
			%unmargin-top-2

	&-group:

		&-heading:

		&-content:

	&-setting:
		&-content:
			#after: .labelled-row-content
			%grid
			grid-template-columns: 1fr auto
			%gap-3

		&-button:
			%width-100
			%border-box
