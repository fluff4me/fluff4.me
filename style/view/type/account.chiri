#view type="account":

.account-view-oauth-service:
	%flex
	%gap-3
	%align-items-centre
	$background: $colour
	background: $background
	colour: #{contrast($colour)}

	::hover, ::focus:
		$background: hsl(from $colour h s calc(l + 5))
		background: $background

	::active:
		$background: hsl(from $colour h calc(s - 40) calc(l - 15))
		background: $background

	&-container:
		%flex
		%flex-column
		%gap-3

	&-icon:
		%size-constrain-text

	&-name:
		%font-vertical-align

	&--authenticated:
