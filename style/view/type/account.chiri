#view type="account":

.account-view-oauth-service:
	%flex
	%gap-3
	%align-items-centre
	%padding-2-3
	$background: $colour
	background: $background
	colour: #{contrast($colour)}
	%border-radius-2
	%font-3

	::hover, ::focus:
		$background: color-mix(in hsl, $colour, 10% #fff)
		background: $background

	&-container:
		%flex
		%flex-column
		%gap-3

	&-icon:
		%size-constrain-text

	&-name:
		%font-vertical-align

	&--authenticated:
